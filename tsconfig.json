{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": [
      "es2017",
      "es2015"
    ]
  },
  "include": [
    "./src/**/*",
    "./types/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
